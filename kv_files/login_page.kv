#:include kv_files/connected.kv
#:include kv_files/registration.kv
#:include kv_files/profile.kv

<Login>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 30

        Label:
            text: 'Welcome to FitSocApp'
            font_size: 30

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Username'
                font_size: 16
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 14

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 16
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 14

        Button:
            text: 'Login'
            font_size: 24

            on_press: root.do_login(login.text, password.text)

        Button:
            text: 'Registration'
            font_size: 24
            on_release: app.root.current = 'registration'